<%- include("../partials/header") %>
<div class="container">
    <div class="container">
        <header class="jumbotron">
            <h1>Welcome to campgrounds</h1>
            <p>Here, we present you with sceneric campgrounds from around the world.</p>
            <p>
               <a class="btn btn-primary btn-lg" href=" /campgrounds/new">Add new Campground</a> 
            </p>
        </header>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row" style="display: flex; flex-wrap: wrap;">   


        <% campgrounds.forEach(function(camp){ %>
                          
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    
                    <img src= "<%=camp.image%>" alt="img not available ">
                </div>
                <div class="caption">
                    <h4><%= camp.name%></h4>
                </div>
                <div>
                    <p>
                        <a href=" /campgrounds/<%= camp._id %>" class="btn btn-primary">More Info </a>
                    </p>
                </div>
                
                
            </div>
        <%})%>
        
    </div>
    
</div>    
<%- include("../partials/footer") %>